#: import SingleRune SingleRune
#: import Factory kivy.factory.Factory

<PopupRune>:

	#on_open:

	_Image: root.RuneWorp
	_runeTeken: root.RuneTeken
	_runeUitleg: root.RuneTekst

	autodissmiss: True
	size_hint: .6,.6
	size_pos: {"x":1,"top":.9}
	title:"Jouw Rune vd Dag"
	separator_color: 1,0,1,1
	background_color: [1,0,0,1]
	background: "Layout/Eyes.png"

	BoxLayout:
		id: _Box
		orientation: "vertical"
		padding:30
		size: root.width, root.height

		canvas:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				size:self.width, self.height
				pos:self.pos
		Image:
			id:_Image
			source: root.RuneWorp

		Label:
			id:_runeTeken
			size_hint:(1,.2)
			text: root.RuneTeken
			font_size:28
			color: 0,0,1,1

		Label:
			id: _runeUitleg
			text_size: (160,None)
			halign: "left"
			valign: "middle"
			text: root.RuneTekst
			font_size:12
			color: 1,0,1,1

<SingleRuneScreen>:

	BoxLayout:
		orientation:"vertical"

		canvas:
			Color:
				rgba: 1,0,0,1
			Rectangle:
				size: self.width,self.height
				source:"Layout/Stones in wood.jpg"
			Color:
				rgba: 1,1,1,1
			Ellipse:
				size:300,300
				pos:25,100

		Label:
			text: "Today's Rune\n [color=#FFFFFF][size=14]Werp jouw dagvoorspelling [/color][/size] "
			color: 0,1,0,1
			font_size: 30
			size_hint:(1,1)
			pos_hint:{"center_x":.5}
			markup: True

		Label:
			id: _RuneTeken
			text: ""
			color: 1,1,1,1
			font_size: 12
			size_hint:(1,1)
			pos_hint:{"center_x":.5}

		Label:
			id: _Gekozenrune
			canvas:
				Color:
					rgba: 1,1,1,1
				Ellipse:
				#Rectangle:
					source: "Layout/Eyes.png"
					size: 100,100
					pos:125,200

		BoxLayout:
			orientation: "vertical"
			size:100,200

			Button:
				id: _WerpRune
				text:"Throw\n your runestone"
				font_size:12
				halign: "center"
				color: 1,0,1,1
				background_color:1,1,1,0
				size_hint: (.1,.05)
				pos_hint:{"center_x": 0.5}

				on_press:
					root.Worp()

			Button:
				text:"<< Menu >>"
				font_size:12
				color: 1,1,1,1
				background_color:1,1,1,0
				size_hint: (.1,.05)
				pos_hint:{"center_x": 0.75}
				on_press:
					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"
