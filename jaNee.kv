#:import jaNee jaNee

<RuneImage@Image>

	background_color: 1,1,1,0
	background_normal:""
	canvas.before:
		Color:
			rgba:1,1,1,.75
		Ellipse:
			size:self.size
			pos: self.pos
	source:""
	size_hint:None,None
	width:75
	height:75
	pos_hint:{"center_x":.5}


<AntwLabel@Label>
	background_color: 1,1,1,0
	background_normal:""
	canvas.before:
		Color:
			rgba: [1,1,1,1]
		RoundedRectangle:
			size: self.size
			pos:self.pos
			radius: [8]
	font_size: dp(24)
	halign:"center"
	valign:"center"
	pos_hint:{"center_x":.5, "center_y":.3}

<RuneLabel@Label>:

	font_size: dp(12)
	color:1,1,1,1
	size_hint: (1,.1)

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<JaNeeScreen>:

	BoxLayout
		orientation: "vertical"
		padding:0

		canvas:
			Color:
				rgba: 1,0,1,1
			Rectangle:
				size: self.width, self.height
				source: "Layout/road.jpg"
		Label:
			text: "Ja/Néé vragen\n [color=#FFFFFF][size=12]3 stenen werpen voor een antwoord [/color][/size] "
			color: 0,1,0,1
			font_size: dp(30)
			size_hint:(1,1)
			pos_hint:{"center_x":.5}
			markup:True

		GridLayout:
			cols: 3
			#columns:2
			padding:60
			spacing: 20
			#size:self.size
			#pos: self.pos

			BoxLayout:
				orientation: "vertical"
				RuneImage:
					id: _plaatje1
					source: "Runentekens/gebo.png"
				RuneLabel:
					id: _RuneNaam1
					text: "-1-"
					size_hint:1,.05
			BoxLayout:
				orientation: "vertical"
				RuneImage:
					id: _plaatje2
					source: "Runentekens/gebo.png"
				RuneLabel:
					id: _RuneNaam2
					text: "-2-"
					size_hint:1,.05
			BoxLayout:
				orientation: "vertical"

				RuneImage:
					id: _plaatje3
					source: "Runentekens/gebo.png"
				RuneLabel:
					id: _RuneNaam3
					text: "-3-"
					size_hint:1,.05

		AntwLabel:
			id: _UitlegAntwoord
			text: "Ask your yes-or-no question\n and throw the runestones"
			text_size: (self.width-50,None)
			font_size: dp(14)
			halign: "left"
			italic:True
			color:1,0,0,1
			size_hint: (.75,.6)


		Button:
			text:"<< Throw >>"
			font_size:dp(13)
			color: 1,1,1,1
			background_color: 1,1,1,0
			size_hint: (.4,.25)
			pos_hint:{"center_x":0.5}
			on_press:
				root.runensetwerpen()

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			#padding:25
			#spacing:50
			padding:15
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size: dp(13)
				on_press:
					_plaatje1.source = "RunenTekens/isa.png"
					_RuneNaam1.text= "-1-"
					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				on_press:
					quit()

