#:import jaNee jaNee

<RuneImage@Image>

	background_color: 1,1,1,0
	background_normal:""

	canvas.before:
		Color:
			rgba:1,1,1,.75
		Ellipse:
			size:self.width+25, self.height+25
			pos: self.pos

	source:"RunenTekens/gebo.png"
	size_hint:None,None
	width:120
	height:120
	allow_stretch:True
	keep_ratio:False
	pos_hint:{"center_x":.5}


<AntwLabel@Label>
	background_color: 1,1,1,0
	background_normal:""
	canvas.before:
		Color:
			rgba: [1,1,1,.2]
		RoundedRectangle:
			size: self.size
			pos:self.pos
			radius: [8]

	font_size: dp(24)
	color: 1,1,1,1
	halign:"center"
	valign:"center"
	size_hint:(1,.25)
	pos_hint:{"center_x":.5, "center_y":.3}

<RuneLabel@Label>:

	font_size: dp(12)
	color:1,1,1,1
	size_hint: (1,.1)

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<JaNeeScreen>:

	BoxLayout
		orientation: "vertical"
		padding:0

		canvas:
			Color:
				rgba: 1,0,1,1
			Rectangle:
				size: self.width, self.height
				source: "Layout/road.jpg"
		Label:
			text: "Yes-or-No questions\n [color=#FFFFFF][size=24]Throw 3 runes and get an answer[/color][/size]"
			color: 0,1,0,1
			font_size: dp(30)
			halign:"center"
			size_hint:(1,1)
			pos_hint:{"center_x":.5}
			markup:True

		GridLayout:
			cols: 3
			padding:25
			spacing: 0

			BoxLayout:
				orientation: "vertical"
				spacing:-50
				RuneImage:
					id: _plaatje1
				RuneLabel:
					id: _RuneNaam1
					text: "-1-"
					size_hint:1,.1
			BoxLayout:
				orientation: "vertical"
				spacing:-50
				RuneImage:
					id: _plaatje2
				RuneLabel:
					id: _RuneNaam2
					text: "-2-"
					size_hint:1,.1
			BoxLayout:
				orientation: "vertical"
				spacing:-50
				RuneImage:
					id: _plaatje3
				RuneLabel:
					id: _RuneNaam3
					text: "-3-"
					size_hint:1,.1

		AntwLabel:
			id: _UitlegAntwoord
			text: "Ask a yes-or-no question\n and throw the runestones"
			text_size: (self.width-50,None)
			font_size: dp(14)
			halign: "left"
			italic:True
			color:1,1,1,1
			size_hint: (.75,.6)


		Button:
			text:"<< Throw runes>>"
			font_size:dp(14)
			color: 1,1,1,1
			background_color: 1,1,1,0
			size_hint: (.4,.25)
			pos_hint:{"center_x":0.5}
			on_press:
				root.runensetwerpen()

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			#padding:25
			spacing:60
			padding:25
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size: dp(13)
				size_hint:None,None
				height:50
				on_press:
					_plaatje1.source = "RunenTekens/gebo.png"
					_plaatje2.source = "RunenTekens/gebo.png"
					_plaatje3.source = "RunenTekens/gebo.png"
					_RuneNaam1.text= "-1-"
					_RuneNaam2.text= "-2-"
					_RuneNaam3.text= "-3-"
					_UitlegAntwoord.text ="Ask a yes-or-no question\n and throw the runestones"


					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				size_hint:None,None
				height:50
				on_press:
					quit()

