#:import keltischKruis keltischKruis

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<KeltischKruisScreen>:
	BoxLayout:
		orientation:"vertical"
		padding:40

		canvas:
			Color:
				rgba: 0,1,0,1
			Rectangle:
				size: self.width,self.height
				source:'Layout/road.jpg'
		Label:
			id: _Header
			text: "Celtic Cross\n[color=#FFFFFF][size=24] 5-runes-reading for a prediction[/color][/size]"
			halign: "center"
			font_size: dp(40)
			size_hint:(1,.5)
			markup:True
		Label:
			text:""
			size_hint:(1,.35)

		GridLayout:
			columns:3
			cols:3
			padding:0
			spacing:140
			size_hint:(1,.5)

			Label:
				text: ""
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _HelpImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
				Button
					id: _HelpButton
					text: "Help"
					font_size: dp(15)
					#size_hint:(1,1)
					size_hint:(None,None)
					width:self.width
					height:20
					pos_hint:{"center_x":.5,"center_y":.5}
					background_color: 1,0,0,0
					pos_hint:{"center_x":.5}
					on_release:
						root.Rune_interpretatie("Help")
			Label:
				text: ""

			BoxLayout:
				orientation:"vertical"
				spacing: 5

				Image:
					id: _PastImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					color:1,0,0,1
					pos_hint:{"center_x":.5}
				Label:
				Button:
					id: _PastButton
					text: "Past"
					font_size: dp(15)
					#size_hint:(1,1)
					size_hint:(None,None)
					width:self.width
					height:25
					background_color: 1,0,0,0
					pos_hint:{"center_x":.5}
					on_release:
						root.Rune_interpretatie("Past")
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _PresentImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
				Button:
					id: _PresentButton
					text: "Present"
					font_size: dp(15)
					size_hint:(None,None)
					width:self.width
					height:25
					background_color: 1,0,0,0
					pos_hint:{"center_x":.5}
					on_release:
						root.Rune_interpretatie("Present")
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _FutureImage
					source: "RunenTekens/gebo.png"
					#size_hint:(1,1)
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
				Button:
					id: _FutureButton
					text: "Future"
					font_size: dp(15)
					size_hint:(None,None)
					width:self.width
					height:25
					background_color: 1,0,0,0
					pos_hint:{"center_x":.5}
					on_release:
						root.Rune_interpretatie("Future")
			Label:
				text: ""
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _ObstacleImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}

				Label:
				Button:
					id: _ObstacleButton
					text: "Obstacle"
					font_size: dp(15)
					size_hint:(None,None)
					width:self.width
					height:25
					background_color: 1,1,1,0
					pos_hint:{"center_x":.5}
					on_release:
						root.Rune_interpretatie("Obstacle")
			Label:
				text: ""
				size_hint:(1,1)
		Label:
			text: ""
			size_hint:(1,.4)

		Button:
			id:_B4c
			text:""
			halign:"center"
			font_size: dp(16)
			bold:True
			color: 1,1,1,1
			background_normal:''
			background_color: 1,0,0,0
			size_hint: (0.5,.15)
			pos_hint:{"center_x": 0.5}
			on_release:
				root.RunenWorp()
			canvas.before:
				Color:
					rgba: 1,1,1,.3
				Ellipse:
					size: 100, 100
					#pos:self.center_x,self.center_y
					pos:self.x,self.center_y-50

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			spacing:60
			padding:25
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size: dp(13)
				size_hint:None,None
				height:50

				on_press:
					_ObstacleImage.source="RunenTekens/gebo.png"
					_ObstacleButton.text="Obstacles"
					_HelpImage.source="RunenTekens/gebo.png"
					_HelpButton.text="Help"
					_PastImage.source="RunenTekens/gebo.png"
					_PastButton.text="Past"
					_PresentImage.source="RunenTekens/gebo.png"
					_PresentButton.text="Present"
					_FutureImage.source="RunenTekens/gebo.png"
					_FutureButton.text="Future"
					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				size_hint:None,None
				height:50
				on_press:
					quit()
