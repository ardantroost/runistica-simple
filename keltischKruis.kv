#:import keltischKruis keltischKruis

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<KeltischKruisScreen>:
	BoxLayout:
		orientation:"vertical"

		padding:40
		canvas:
			Color:
				rgba: 0,1,0,1
			Rectangle:
				size: self.width,self.height
				source:'Layout/road.jpg'

		Label:
			text: "Celtic Cross\n[color=#FFFFFF][size=24] 5-runes-reading for a prediction[/color][/size] "
			halign: "center"
			font_size: dp(40)
			size_hint:(1,1)
			markup:True

		GridLayout:
			columns:3
			cols:3

			spacing:100

			Label:
				text: ""
				size_hint:(1,1)
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _HelpImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
					text:''
				Button
					id: _HelpButton
					text: "Help"
					font_size: dp(15)
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Help")
			Label:
				text: ""
				size_hint:(1,1)

			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _PastImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					color:1,0,0,1
					pos_hint:{"center_x":.5}
				Label:
					text:''
				Button:
					id: _PastButton
					text: "Past"
					font_size: dp(15)
					size_hint:(1,1)
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Past")

			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _PresentImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
					text:''
				Button:
					id: _PresentButton
					text: "Present"
					font_size: dp(15)
					size_hint:(1,1)
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Present")
			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _FutureImage
					source: "RunenTekens/gebo.png"
					#size_hint:(1,1)
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
					text:''
				Button:
					id: _FutureButton
					text: "Future"
					font_size: dp(15)
					size_hint:(1,1)
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Future")
			Label:
				text: ""
				size_hint:(1,1)

			BoxLayout:
				orientation:"vertical"
				spacing: 5
				Image:
					id: _ObstacleImage
					source: "RunenTekens/gebo.png"
					size_hint:None,None
					width:100
					height:100
					allow_stretch:True
					keep_ratio:False
					pos_hint:{"center_x":.5}
				Label:
					text:''
				Button:
					id: _ObstacleButton
					text: "Obstacle"
					font_size: dp(15)
					size_hint:(1,1)
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Obstacle")
			Label:
				text: ""
				size_hint:(1,1)
		Label:
			id: _StelJeVraag
			text: ""
			font_size: dp(10)
			italic: True
			size_hint:(1,.25)
			pos_center_y:.1

		Button:
			text:"<<Throw runes>>"
			font_size: dp(16)
			bold:True
			color: 1,1,1,1
			background_normal:''
			background_color: 1,0,0,0
			size_hint: (0.5,.25)
			pos_hint:{"center_x": 0.5,"top":0.5}
			on_release:
				root.RunenWorp()

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			#padding:25
			spacing:60
			padding:15
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size: dp(13)
				on_press:
					_ObstacleImage.source="RunenTekens/gebo.png"
					_HelpImage.source="RunenTekens/gebo.png"
					_PastImage.source="RunenTekens/gebo.png"
					_PresentImage.source="RunenTekens/gebo.png"
					_FutureImage.source="RunenTekens/gebo.png"
					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				on_press:
					quit()
