#:import KeltischKruis KeltischKruis

<KeltischKruisScreen>:
	BoxLayout:
		orientation:"vertical"

		padding:40
		canvas:
			Color:
				rgba: 0,1,0,1
			Rectangle:
				size: self.width,self.height
				source:'Layout/druide.png'
			Color:
				rgba: 1,1,1,.5
			Ellipse:
				size: 250,250
				pos: 50,180

		Label:
			text: "Keltisch Kruis\n[color=#FFFFFF][size=12]Werp 5 stenen voor een voorspelling [/color][/size] "
			halign: "center"
			font_size: 40
			size_hint:(1,1)
			#pos_hint:{"center_x":.5}
			markup:True

		GridLayout:
			columns:3
			cols:3
			spacing:15
			#padding: 10

			Label:
				text: ""
				size_hint:(1,1)
			BoxLayout:
				orientation:"vertical"
				spacing: 10
				Image:
					id: _HelpImage
					source: "RunenTekens/gebo.png"
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
				Button
					id: _HelpButton
					text: "Help"
					font_size: 12
					size_hint:(1,.2)
					pos_hint:{"center_x":.5}
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Help")
			Label:
				text: ""
				size_hint:(1,1)

			BoxLayout:
				orientation:"vertical"
				spacing: 10
				Image:
					id: _PastImage
					source: "RunenTekens/gebo.png"
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
				Button:
					id: _PastButton
					text: "Past"
					font_size: 12
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Past")

			BoxLayout:
				orientation:"vertical"
				spacing: 10
				Image:
					id: _PresentImage
					source: "RunenTekens/gebo.png"
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
				Button:
					id: _PresentButton
					text: "Present"
					font_size: 12
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Present")
			BoxLayout:
				orientation:"vertical"
				spacing: 10
				Image:
					id: _FutureImage
					source: "RunenTekens/gebo.png"
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
				Button:
					id: _FutureButton
					text: "Future"
					font_size: 12
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Future")
			Label:
				text: ""
				size_hint:(1,1)

			BoxLayout:
				orientation:"vertical"
				spacing: 10
				Image:
					id: _ObstacleImage
					source: "RunenTekens/gebo.png"
					size_hint:(1,1)
					pos_hint:{"center_x":.5}
				Button:
					id: _ObstacleButton
					text: "Obstacle"
					font_size: 12
					background_color: 1,0,0,0
					on_release:
						root.Rune_interpretatie("Obstacle")
			Label:
				text: ""
				size_hint:(1,1)
		Label:
			id: _StelJeVraag
			text: "-- Stel jezelf een vraag en gooi --"
			font_size: 10
			italic: True
			size_hint:(1,.25)
			pos_center_y:.1

		Button:
			text:"<<Gooi jouw runen>>"
			font_size: 14
			bold:True
			color: 1,1,1,1
			background_normal:''
			background_color: 1,0,0,0
			size_hint: (0.5,.25)
			pos_hint:{"center_x": 0.5,"top":0.5}
			on_release:
				_StelJeVraag.text = "Click name for Rune explanation"
				root.RunenWorp()
		Button:
			text:"<<Menu>>"
			font_size: 10
			color: 1,1,1,1
			#halign: "center"
			background_normal:''
			background_color: 1,1,1,0
			size_hint: (0.25,.1)
			pos_hint:{"center_x": 0.9,"center_y":0.9}
			on_press:
				root.manager.current="settingsscreen"
				root.manager.transition.direction="right"
