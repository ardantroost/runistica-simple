#: import welcome welcome

<WelcomeScreen>:
	BoxLayout:
		orientation: "vertical"

		canvas:
			Color:
				rgba: 1,0,0,1
			Rectangle:
				size: self.width,self.height
			Color:
				rgba: 1,1,1,1
			Ellipse:
				size:1000,1600
				pos:-160,150
			Color:
				rgba: 1,0,0,1
			Ellipse:
				size:1000,1600
				pos:-260,450
				#source:"Layout/road.jpg"


		Label:
			canvas:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					size:240,240
					#size:self.size
					pos: 130,230
					source: "Layout/Logo runistica.png"

		Button:
			id: _EnterButton
			text: "Enter"
			font_size: dp(18)
			color: 1,1,1,1
			background_color:0,0,1,0
			size_hint: (.2,.1)
			pos_hint:{"center_x":0.80, "center_y":0}
			on_press: root.manager.current = "settingsscreen"
