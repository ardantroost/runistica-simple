#:import settings settings

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<Bbutton@Button>

	background_color: 1,0,0,0
	background_normal: ""
	color: .5,1,1,1
	font_size: dp(12)
	size_hint: None,None
	size: 100,100
	on_release:
		self.color = 1,1,1,1

<SettingsScreen>:

	BoxLayout:

		canvas:
			Color:
				rgba: 1,0,0,1
			Rectangle:
				size: self.width,self.height
				source:'Layout/road.jpg'
			Color:
				rgba: 0,1,1,.5

		BoxLayout:
			orientation: "vertical"
			size: root.width, root.height

			Label:
				text: "Runistica\n [size=28]Consult the secret Germanic stones [/size]"
				font_size: dp(60)
				halign: "center"
				size_hint:(.25,1)
				pos_hint:{"center_x":0.5}
				markup: True

			BoxLayout:
				orientation: "horizontal"
				spacing:20
				canvas:
					Color:
						rgba: 0,1,1,.5
					Ellipse:
						size: 300,300
						pos: 60,540
						source:'Layout/Eyes.png'
				Bbutton:
					id:_B1
					text: "Jouw\n DagRune\n werpen"
					halign: "left"
					font_size: dp(14)
					size_hint: (1,0.2)
					pos_hint: {"center_x":0.5,"center_y": 0.5}
					on_press:
						root.manager.current="singlerunescreen"
						root.manager.transition.direction = "left"
					canvas:
						Color:
							rgba: 0,1,0,.5
						Ellipse:
							size: 300,300
							pos: 300,540
							source:'Layout/Eyes.png'
				Bbutton:
					id:_B2
					text: "Een\n Ja-of-Néé vraag\n stellen"
					halign: "center"
					font_size: dp(14)
					size_hint: (1,0.2)
					pos_hint:{"center_x": 0.5,"center_y": 0.5}
					on_press:
						root.manager.current="janeescreen"
						root.manager.transition.direction = "left"

					canvas:
						Color:
							rgba: 0,0,1,.5
						Ellipse:
							size: 300,300
							pos: 575,540
							source:'Layout/Eyes.png'

				Bbutton:
					id:_B3
					text: "Een\n openvraag\n stellen"
					halign: "right"
					font_size: dp(14)
					size_hint: (1,0.2)
					pos_hint:{"center_x": 0.5,"center_y": 0.5}
					on_press:
						root.manager.current = "keltischkruisscreen"
						root.manager.transition.direction = "left"
			Label:
				id:_CountryChoice
				text:""
				size_hint:(1,.05)

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			padding:25
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				on_press:
					quit()