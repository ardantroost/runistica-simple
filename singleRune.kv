#: import singleRune singleRune

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_color:1,1,1,0

<SingleRuneScreen>:

	BoxLayout:
		orientation:"vertical"
		padding:20

		canvas:
			Color:
				rgba: 1,0,0,1
			Rectangle:
				size: self.width,self.height
				source:"Layout/road.jpg"
		Label:
			text: ""
			size_hint:(1,.5)
		Label:
			text: "Today's Rune\n [color=#FFFFFF][size=24]Werp jouw dagvoorspelling [/color][/size] "
			color: 1,1,1,1
			halign: "center"
			font_size: dp(48)
			size_hint:(1,.1)
			pos_hint:{"center_x":.5}
			markup: True

		Label:
			id: _RuneTeken
			text: ""
			color: 1,1,1,1
			font_size: 12
			size_hint:(1,1)
			pos_hint:{"center_x":.5}

		Label:
			id: _Gekozenrune
			canvas:
				Color:
					rgba: 1,1,1,1

		BoxLayout:
			orientation: "vertical"
			size:100,200
			Button:
				id: _WerpRune
				text:"Throw\n your runestone"
				font_size:dp(18)
				halign: "center"
				color: 1,1,1,1
				background_color:1,1,1,0
				size_hint: (.25,.05)
				pos_hint:{"center_x": 0.5}

				on_press:
					root.Worp()
	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			spacing:60
			padding:25
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size: dp(13)
				size_hint:None,None
				height:50
				on_press:
					root.manager.current="settingsscreen"
					root.manager.transition.direction="right"

			AnchorButton:
				text: "Quit"
				font_size: dp(13)
				size_hint:None,None
				height:50
				on_press:
					quit()